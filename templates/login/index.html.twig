{% extends 'base.html.twig' %}

{% block title %}Hotello - connexion{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <section id="inscription-section" class="inscription-section">
        <img src="{{ asset('./assets/img/log-in.svg')}}" alt="les services Hotello">
        <h1>Connectez-vous à votre espace personnel</h1>
        <p>Connectez-vous à votre espace personnel chez Hotello.</p>
        <br>

        <form action="{{ path('app_login') }}" method="post">

            <div class="input">
                <label for="username">Email:</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}">
            </div>

            <div class="input">
                <label for="password">Password:</label>
                <input type="password" id="password" name="_password">
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            {# If you want to control the URL the user is redirected to on success
            <input type="hidden" name="_target_path" value="/account"> #}

            <button type="submit" class="btn btn-gold">Connexion</button>
        </form>

        <p>Vous n'êtes pas encore inscrit chez nous ? <a href="{{ path('app_register')}}" title="inscrivez-vous" class="gold"> Créez-votre espace personnel ici.</p>
    </section>
{% endblock %}
